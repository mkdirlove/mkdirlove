{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "customFont": true,
    "customColors": true,
    "wideLayout": true
  },
  "blocks": {
    "core/paragraph": {
      "typography": {
        "fontSize": "1rem",
        "lineHeight": 1.6,
        "fontFamily": "Arial, sans-serif",
        "fontWeight": "normal",
        "textAlign": "left"
      }
    },
    "core/image": {
      "spacing": {
        "margin": "1em",
        "padding": "0.5em"
      }
    }
  }
}
