# Dual Monitor

xrandr --output DP-1 --auto --output VGA-1-1 --auto --left-of DP-1

# Triple Monitor

xrandr --output HDMI-1 --off --output DP-1 --mode 1920x1080 --pos 1920x1080 --rotate normal --output DVI-D-1-1 --mode 1920x1080 --pos 1920x0 --rotate normal --output HDMI-1-2 --off --output VGA-1-1 --primary --mode 1920x1080 --pos 0x1080 --rotate normal
